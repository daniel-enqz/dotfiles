{
	 "ruby-expression":{
		 "prefix":"<%",
		 "body":[
			 "<%$1 %>"],
		 "description": "ruby expression"
	 },
    "escape_javascript":{
		"prefix": "escape_j",
		"body": [
			"<%= escape_javascript (${1:content}) %>"
		],
		"description": "rails escape_javascript"
	},
	"begin":{
		"prefix": "=begin",
		"body": [
			"<%\n=begin %>",
			"$1",
			"<%\n=end %>"
		],
		"description": "rails comment"
	},
    "j":{
		"prefix": "jrender",
		"body": [
			"<%= j( render :partial => '${1:partial_path}' ) %>"
		],
		"description": "rails <%= j( render :partial => '${1:partial_path}' ) %>"
	}
}